page {
	display: flex;
	flex-direction: column;
}

.desc {
	line-height: 30px;
	color: #666;
	text-align: center;
	display: block;
	font-size: 18px;
	padding: 10px 20px;
	margin-bottom: 20px;
}

image {
	width: 70%; 
	margin: 0 auto;
}

/*金额*/
.value {
	color: #48c23d;
	font-size: 100rpx;
	text-align: center;
	line-height: 140rpx;
}

/*单位*/
.value:after {
	font-size: 16px;
	color: gray;
	content: '元';
	margin-left: 5px;
}

/*赞赏按钮*/
button {
	width: 90%;
	margin: 20px auto;
}

