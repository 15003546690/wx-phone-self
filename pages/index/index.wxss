.index-inner {
  height: 100%;
  width: 100%;
  /* background: rgba(255, 255, 255, .8); */
  background: rgba(0, 0, 0, .8);
}
.index-view__header {
  height: 100rpx;
  width: 100%;
}
.index-view_main {
  display: flex;
  justify-content: center;
  align-content: center;
  height: calc(100% - 100rpx);
  width: 100%;
}
.tool-view {
  height: 60%;
  width: 60%;
  border-radius: 5px;
}
.tool-btn {
  margin: 30rpx auto;
  height: 90rpx;
  width: 80%;
  border-radius: 5px;
  text-align: center;
  line-height: 90rpx;
  background: rgba(255, 255, 255, .7);
}